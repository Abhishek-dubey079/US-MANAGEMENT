// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id        String   @id @default(cuid())
  name      String
  pan       String?  @unique
  aadhaar   String?
  address   String?
  phone     String?
  createdAt DateTime @default(now())
  works     Work[]

  @@map("clients")
}

model Work {
  id              String   @id @default(cuid())
  clientId        String
  purpose         String
  fees            Float    @default(0)
  completionDate  DateTime?
  status          String   @default("PENDING")
  paymentReceived Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  client          Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@map("works")
}

model History {
  id                  String   @id @default(cuid())
  // Snapshot data - stored independently, not linked to Client or Work
  clientName          String
  clientPan           String?
  workPurpose         String
  fees                Float
  completionDate      DateTime
  paymentReceivedDate DateTime // Date when payment was received (when work became finalCompleted)
  paymentReceived     Boolean  @default(true) // Always true for history records
  // Optional references (not foreign keys - for tracking only)
  originalWorkId      String?  // Reference to original work (may be deleted)
  originalClientId    String?  // Reference to original client (may be deleted)
  createdAt           DateTime @default(now())

  @@map("history")
  @@index([completionDate])
  @@unique([originalWorkId]) // Ensure only one history record per work (prevents duplicates)
}


