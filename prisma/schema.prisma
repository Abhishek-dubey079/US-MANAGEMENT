// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id        String   @id @default(cuid())
  userId    String?
  name      String
  pan       String?  @unique
  aadhaar   String?
  address   String?
  phone     String?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  works     Work[]
  documents ClientDocument[]

  @@map("clients")
  @@index([userId])
}

model Work {
  id              String    @id @default(cuid())
  userId          String?
  clientId        String
  purpose         String
  fees            Float     @default(0)
  completionDate  DateTime?
  status          String    @default("PENDING")
  paymentReceived Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  user            User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  client          Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  payments        Payment[]

  @@map("works")
  @@index([userId])
}

model Payment {
  id          String   @id @default(cuid())
  workId      String
  amount      Float
  paymentDate DateTime @default(now())
  createdAt   DateTime @default(now())
  work        Work     @relation(fields: [workId], references: [id], onDelete: Cascade)

  @@map("payments")
  @@index([workId])
}

model History {
  id                  String   @id @default(cuid())
  // Snapshot data - stored independently, not linked to Client or Work
  clientName          String
  clientPan           String?
  workPurpose         String
  fees                Float
  totalPaid           Float    @default(0) // Total amount paid (sum of all payments)
  paymentDetails      String?  // JSON string storing array of payments: [{amount, paymentDate}]
  completionDate      DateTime
  paymentReceivedDate DateTime // Date when payment was received (when work became finalCompleted)
  paymentReceived     Boolean  @default(true) // Always true for history records
  // Optional references (not foreign keys - for tracking only)
  originalWorkId      String?  // Reference to original work (may be deleted)
  originalClientId    String?  // Reference to original client (may be deleted)
  createdAt           DateTime @default(now())

  @@map("history")
  @@index([completionDate])
  @@unique([originalWorkId]) // Ensure only one history record per work (prevents duplicates)
}

model User {
  id        String   @id @default(cuid())
  name      String
  username  String   @unique
  password  String   // Hashed password
  createdAt DateTime @default(now())
  clients   Client[]
  works     Work[]

  @@map("users")
}

model ClientDocument {
  id          String   @id @default(cuid())
  clientId    String
  name        String
  url         String
  contentType String
  size        Int
  createdAt   DateTime @default(now())
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@map("client_documents")
  @@index([clientId])
}


